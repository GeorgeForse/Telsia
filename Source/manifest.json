{
  "manifest_version": 3,
  "name": "Telsia: Eye Strain Reduction",
  "short_name": "Telsia",
  "author": "George Forse",
  "homepage_url": "https://telsia.org",
  "version": "x",
  "description": "Reduces eye strain with a custom colour overlay. Improves readability for users with Scotopic Sensitivity Syndrome, Dyslexia, Photophobia, Visual Stress, and other conditions that affect reading on a screen",
  "icons": {
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  },
  "permissions": ["storage", "scripting"],
  "host_permissions": ["http://*/*", "https://*/*"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/icon16.png",
      "32": "images/icon32.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js",
    "scripts": ["background.js"]
  },
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["content.js"],
      "run_at": "document_start"
    }
  ],
  "storage": {
    "managed_schema": "schema.json"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "telsia@telsia.org",
      "strict_min_version": "112.0",
      "data_collection_permissions": {
        "required": ["none"]
      }
    }
  }
}
